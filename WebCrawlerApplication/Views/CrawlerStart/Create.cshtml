@model CrawlerStartModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Start Crawler</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="URL" class="control-label">Target URL</label>
                <input asp-for="URL" type="url" class="form-control" />
                <span asp-validation-for="URL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expression" class="control-label">Search Expression</label>
                <input asp-for="Expression" class="form-control" />
                <span asp-validation-for="Expression" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Depth" class="control-label">Search Depth</label>
                <input asp-for="Depth" class="form-control" title="If empty default value will be set to 1" />
                <span asp-validation-for="Depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

