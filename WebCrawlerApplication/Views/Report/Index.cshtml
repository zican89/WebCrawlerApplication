@model IEnumerable<WebCrawlerApplication.Models.ReportModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.URL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expression)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HitCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Expression)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HitCount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Crawlername">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Crawlername">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Crawlername">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
